global-reset()

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: -10
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    height: 100%
    overflow: hidden

body
  background: #fff
  font-size: font-size
  font-family: font-sans
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative

h1, h2, h3, h4, strong
  font-weight 600
  color #2c3e50


.wrapper
  clearfix()
  @media screen
    max-width: max-width
    margin: 0 auto

.inner
  clearfix()
  @media screen
    padding: 0 gutter-width

#content-wrap
  background: #fff