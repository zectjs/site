header-padding-normal = 10px
header-padding-max = 30px
logo-size = 50px

#header
  position: relative
  padding: header-padding-normal 60px
  box-shadow: 0 0 4px rgba(0,0,0,0.25)
  @media print
    display: none
  .home &
    padding: header-padding-max 0

#header-inner
  position: relative

#logo-wrap
  text-align: center

#logo-min
  hide-text()
  background: url("/logo.png")
  width: logo-size
  height: logo-size
  background-size: @width @height
  display: inline-block
  @media mq-normal
    float: left

#main-nav
  display: none
  float: left
  padding-left: 20px
  @media mq-normal
    display: block

.main-nav-item
  float: left

.main-nav-link
  color: #34495e
  text-decoration: none
  line-height: logo-size
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  display: block
  margin: 0 20px
  border-bottom 3px solid #fff
  &.current
  &:hover
    border-bottom 3px solid #0e83cd
    -webkit-transform scale(1.05)
    -moz-transform scale(1.05)
    -ms-transform scale(1.05)
    transform scale(1.05)

#search-btn-wrap
  display: none
  float: right
  margin-right: 15px
  @media mq-normal
    display: block

#search-btn
  cursor: pointer

#lang-select-wrap
  display: none
  position: relative
  float: right
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit